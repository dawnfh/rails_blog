<h1>Edit Post</h1>
<%= form_for @post do |f|
<% if @post.errors.any? %>
	<h2>Errors:</h2>
	<ul>
		<% @post.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
	</ul>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %><br>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %><br>
	</p>
	  <%= f.submit "Add a New Post" %>
	</p>
<% end %>